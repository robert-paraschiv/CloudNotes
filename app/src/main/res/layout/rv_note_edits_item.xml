<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/timestampLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rv_note_edits_editType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                tools:text="Edited" />

            <TextView
                android:id="@+id/rv_note_edits_dateTv"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Today at 11" />
        </LinearLayout>


        <TextView
            android:id="@+id/rv_note_edits_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timestampLayout"
            android:layout_margin="8dp"
            android:maxLines="5"
            tools:text="Lorem ipsum \n dada d \n da da dd\n da da dad\ndaaaaa dadd\nda daa daa dad" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>