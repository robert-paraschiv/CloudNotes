<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_theme_settings_background"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/dialog_ShowAd_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:text="Hope this app is useful to you!\nIf it is indeed, could you help me keep it alive by watching an ad?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:textColor="@color/colorPrimary"
            android:id="@+id/dialog_ShowAd_cancelBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:text="No" />

        <com.google.android.material.button.MaterialButton
            android:textColor="@color/colorPrimary"
            android:id="@+id/dialog_ShowAd_confirmBtn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

    </LinearLayout>

</LinearLayout>